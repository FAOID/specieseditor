<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk>
	<window border="normal" width="400px" style="padding-top:20px;padding-left:20px;" title="Species Editor" apply="org.openforis.specieseditor.NewSpecies">
    <grid hflex="1">
        <auxhead>
            <auxheader colspan="2" label="Add New Species" style="font-size:16px" image="images/species.png"/>
        </auxhead>
        <columns/>
        <rows>
        	<row>
                Taxonomy name <textbox id="taxonomyName" hflex="1" constraint="no empty" value="mofor_species"/>
            </row>
            <row>
                Species name <textbox id="speciesName" hflex="1" constraint="no empty"/>
            </row>
            <row>
                Vernacular name <textbox id="vernacularName" hflex="1" constraint="no empty"/>
            </row>
            <row>
                Quallifier1 <textbox id="qualifier1Name" hflex="1" />
            </row>
            <row spans="2" align="right">
                <hlayout>
                    <button id="okButton" label="OK" forward="onClick=onOkButton"/>
                </hlayout>
            </row>
        </rows>
    </grid>
</window>
</zk>